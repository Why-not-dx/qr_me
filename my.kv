#:kivy 1.0
MainScreen:

<MainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: 5
        spacing: 5

        MDLabel: 
            text: "Welcome to Qr_me"

        MDTextField:
            id: my_link
            hint_text: "add your link here"
            required: True

        
        MDLabel:
            id: ze_label
            text: "This background should change"

        
        MDRectangleFlatButton:
            text: "Choose a color for your background"
            on_release: root.open_color_picker()
        
        